    <script>
        // --- Confetti Animation ---
        const confettiCanvas = document.getElementById('confetti-canvas');
        const ctx = confettiCanvas.getContext('2d');
        let particles = [];
        const particleCount = 300;
        const colors = ['#f6d365', '#fda085', '#a1c4fd', '#c2e9fb', '#ff69b4'];

        confettiCanvas.width = window.innerWidth;
        confettiCanvas.height = window.innerHeight;

        class Particle {
            constructor(x, y) {
                this.x = x;
                this.y = y;
                this.radius = Math.random() * 5 + 2;
                this.color = colors[Math.floor(Math.random() * colors.length)];
                this.vx = Math.random() * 2 - 1;
                this.vy = Math.random() * 2 + 1; // Always fall down
                this.opacity = 1;
            }

            draw() {
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
                ctx.fillStyle = this.color;
                ctx.globalAlpha = this.opacity;
                ctx.fill();
                ctx.closePath();
            }

            update() {
                this.x += this.vx;
                this.y += this.vy;
                this.opacity -= 0.005;
                if (this.y > confettiCanvas.height) {
                    this.y = -10;
                    this.x = Math.random() * confettiCanvas.width;
                    this.opacity = 1;
                }
            }
        }

        function initConfetti() {
            particles = [];
            for (let i = 0; i < particleCount; i++) {
                particles.push(new Particle(Math.random() * confettiCanvas.width, Math.random() * confettiCanvas.height - confettiCanvas.height));
            }
        }

        function animateConfetti() {
            ctx.clearRect(0, 0, confettiCanvas.width, confettiCanvas.height);
            particles.forEach(p => {
                p.update();
                p.draw();
            });
            requestAnimationFrame(animateConfetti);
        }

        window.addEventListener('resize', () => {
            confettiCanvas.width = window.innerWidth;
            confettiCanvas.height = window.innerHeight;
            initConfetti();
        });

        initConfetti();
        animateConfetti();
        
        // --- Floating Hearts ---
        const heartsContainer = document.getElementById('hearts-container');
        if (heartsContainer) {
            for (let i = 0; i < 20; i++) {
                const heart = document.createElement('div');
                heart.classList.add('heart');
                heart.innerText = '‚ù§';
                heart.style.left = `${Math.random() * 100}%`;
                heart.style.animationDuration = `${Math.random() * 5 + 8}s`;
                heart.style.animationDelay = `${Math.random() * 5}s`;
                heartsContainer.appendChild(heart);
            }
        }

        // --- Fireworks Animation ---
        const fireworksBtn = document.getElementById('fireworks-btn');
        const fireworksContainer = document.getElementById('fireworks-container');

        fireworksBtn.addEventListener('click', () => {
            // Clear previous fireworks
            fireworksContainer.innerHTML = '';
            
            // Create a burst of 10 fireworks
            for (let i = 0; i < 20; i++) {
                setTimeout(createFireworkBurst, Math.random() * 1000);
            }
            
            // Disable button briefly
            fireworksBtn.disabled = true;
            fireworksBtn.innerText = 'Wow! üéÜ';
            setTimeout(() => {
                fireworksBtn.disabled = false;
                fireworksBtn.innerText = "Light 'em up again! üéÜ";
            }, 1500);
        });

        function createFireworkBurst() {
            const burstX = Math.random() * (fireworksContainer.offsetWidth - 100) + 50;
            const burstY = Math.random() * (fireworksContainer.offsetHeight - 100) + 50;
            const burstColor = colors[Math.floor(Math.random() * colors.length)];

            // Create 30 particles for each burst
            for (let i = 0; i < 30; i++) {
                const particle = document.createElement('div');
                particle.classList.add('firework');
                particle.style.left = `${burstX}px`;
                particle.style.top = `${burstY}px`;
                particle.style.backgroundColor = burstColor;

                // Random angle and distance
                const angle = Math.random() * Math.PI * 2;
                const distance = Math.random() * 100 + 50;
                
                // We use CSS animation for the explosion, but set the final position via transform
                // The animation will scale from the center, but we translate each particle
                const translateX = Math.cos(angle) * distance;
                const translateY = Math.sin(angle) * distance;

                // We'll use the animation to handle the scaling and fade-out
                // But we need to translate each particle to its final destination
                // A bit of a trick: wrap it to apply translate separately
                
                const wrapper = document.createElement('div');
                wrapper.style.position = 'absolute';
                wrapper.style.left = `${burstX}px`;
                wrapper.style.top = `${burstY}px`;
                wrapper.style.transform = `translate(${translateX}px, ${translateY}px)`;
                
                particle.style.left = '0';
                particle.style.top = '0';
                
                wrapper.appendChild(particle);
                fireworksContainer.appendChild(wrapper);

                // Remove after animation
                setTimeout(() => {
                    wrapper.remove();
                }, 1200);
            }
        }
    </script>

</body>
</html>```

